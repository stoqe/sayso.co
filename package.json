{
  "name": "11st-starter-kit",
  "description": "11ty, powered by Snowpack with Tailwind CSS and Alpine.js.",
  "version": "1.0.0",
  "engines": {
    "node": "14.x.x",
    "npm": "6.x.x"
  },
  "main": "index.js",
  "repository": {
    "type": "git",
    "url": "git@github.com:stefanfrede/11st-starter-kit.git"
  },
  "keywords": [
    "alpinjs",
    "eleventy",
    "netlify",
    "snowpack",
    "tailwindcss"
  ],
  "author": {
    "name": "Stefan Frede",
    "email": "stefan@frede.dev"
  },
  "license": "MIT",
  "private": true,
  "bugs": {
    "url": "https://github.com/stefanfrede/11st-starter-kit/issues"
  },
  "homepage": "https://11st-starter-kit.netlify.app",
  "browserslist": [
    "defaults",
    "maintained node versions",
    "> 5%"
  ],
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "lint-staged": {
    "*.{css,js,html}": "stylelint --fix",
    "*.{js,html}": "eslint --fix"
  },
  "scripts": {
    "clean": "rimraf src/_site",
    "serve": "serve --no-clipboard --listen 8080 dist",
    "dev": "snowpack dev",
    "build": "run-s clean build:*",
    "build:snowpack": "snowpack build",
    "build:sw": "workbox generateSW",
    "lint": "run-s lint:*",
    "lint:eslint": "eslint --ext .js --ext .html src/",
    "lint:stylelint": "stylelint src/**/*.js src/**/*.html src/**/*.css",
    "format": "run-s format:*",
    "format:eslint": "eslint --ext .js --ext .html src/ --fix",
    "format:stylelint": "stylelint src/**/*.js src/**/*.html src/**/*.css --fix",
    "validate": "run-s build lint",
    "setup": "npm install && npm run validate"
  },
  "devDependencies": {
    "@commitlint/cli": "^11.0.0",
    "@commitlint/config-conventional": "^11.0.0",
    "babel-eslint": "^10.1.0",
    "browserslist": "^4.16.0",
    "eslint": "^7.16.0",
    "eslint-config-prettier": "^7.1.0",
    "eslint-plugin-html": "^6.1.1",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-prettier": "^3.3.0",
    "husky": "^4.3.6",
    "lint-staged": "^10.5.3",
    "prettier": "^2.2.1",
    "serve": "^11.3.2",
    "stylelint": "^13.8.0",
    "stylelint-config-prettier": "^8.0.2",
    "stylelint-config-standard": "^20.0.0",
    "stylelint-order": "^4.1.0"
  },
  "dependencies": {
    "@11ty/eleventy": "^0.11.1",
    "@snowpack/plugin-postcss": "^1.0.11",
    "@snowpack/plugin-run-script": "^2.2.1",
    "@tailwindcss/typography": "^0.3.1",
    "alpinejs": "^2.8.0",
    "autoprefixer": "^10.1.0",
    "canvas-confetti": "^1.3.2",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.2.1",
    "postcss-cli": "^8.3.1",
    "rimraf": "^3.0.2",
    "snowpack": "^2.18.5",
    "tailwindcss": "^2.0.2",
    "workbox-cli": "^6.0.2"
  }
}
